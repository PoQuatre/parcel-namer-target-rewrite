{
  "compilerOptions": {
    "target": "ES6",
    "module": "ESNext",
    "rootDir": "./src",
    "strict": true,
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "baseUrl": ".",
    "paths": {
      "~*": ["./*"]
    },
    "types": ["jest"]
  },
  "include": ["src/**/*.ts"]
}
